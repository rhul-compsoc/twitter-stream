generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Proccessed {
    id               Int      @id @default(autoincrement())
    tweet_id         String   @db.VarChar(255)
    tweet            Tweet    @relation(fields: [tweet_id], references: [id])
    proccessed_at    DateTime @default(now())
    proccessed_by    String   @db.VarChar(255)
    processed_result Boolean

    @@index([tweet_id])
}

model Tweet {
    id         String       @id @db.VarChar(255)
    created_at DateTime
    author     User         @relation(fields: [author_id], references: [id])
    author_id  String       @db.VarChar(255)
    text       String       @db.LongText
    Proccessed Proccessed[]

    @@index([author_id])
}

model User {
    id                String  @id @db.VarChar(255)
    name              String  @db.VarChar(255)
    username          String  @db.VarChar(255)
    profile_image_url String  @default("") @db.VarChar(255)
    Tweet             Tweet[]
}
