generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Processed {
    id               Int       @id @default(autoincrement())
    msg_id           String    @unique @db.VarChar(255)
    processed_at     DateTime  @default(now())
    processed_by     String    @db.VarChar(255)
    processed_result Boolean
    Message          Message[]

    @@index([msg_id])
}

model Message {
    id           Int      @id @default(autoincrement())
    created_at   DateTime @default(now()) @updatedAt
    message_name String   @db.LongText
    message_text String   @db.LongText

    // fk to Processed
    Processed   Processed? @relation(fields: [processedId], references: [id])
    processedId Int?

    @@index([processedId])
}
