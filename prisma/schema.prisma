generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Processed {
    id               Int      @id @default(autoincrement())
    msg_id           String   @unique @db.VarChar(255)
    msg              Message    @relation(fields: [msg_id], references: [id])
    processed_at     DateTime @default(now())
    processed_by     String   @db.VarChar(255)
    processed_result Boolean

    @@index([msg_id])
}

model Message {
    id         String     @id @db.VarChar(255)
    created_at DateTime
    author     User       @relation(fields: [author_id], references: [id])
    author_id  String     @db.VarChar(255)
    text       String     @db.LongText
    processed  Processed?

    @@index([author_id])    
}

model User {
    id                String  @id @db.VarChar(255)
    name              String  @db.VarChar(255)
    username          String  @db.VarChar(255)
    accent_colour     String  @db.VarChar(10)
    profile_image_url String  @default("") @db.VarChar(255)
    Message           Message[]
}
